<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="417dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="83dp">

        <Button
            android:id="@+id/button_bnr_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner : Show" />

        <Button
            android:id="@+id/button_bnr_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner : Hide" />

        <Button
            android:id="@+id/button_bnr_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner : Detect Height" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_int_ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interstitial : isReady?" />

        <Button
            android:id="@+id/button_int_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interstitial : Show" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_rwv_ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RwVideo : isReady?" />

        <Button
            android:id="@+id/button_rwv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RwVideo : Show" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_iap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Did In-App-Purcase" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>